<%= form_for [topic, post, comment] do |f| %>
  <% if comment.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(comment.errors.count, "error") %>. </h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(comment.errors[:user]) do %>
    <%= f.label :user_name, "User Name" %>
    <%= f.text_field :user, class: 'form-control', placeholder: "Enter user name" %>
  <% end %>

  <%= form_group_tag(comment.errors[:body]) do %>
    <%= f.label :comment %>
    <%= f.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter comment body" %>
  <% end %>


  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>